<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/star_david_background"
        android:alpha="0.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ars Run"
            android:textColor="#FDC007"
            android:textSize="70sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="120dp"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <Button
            android:id="@+id/btn_button_slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button Mode (Slow)"
            android:backgroundTint="#FDC007"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <Button
            android:id="@+id/btn_button_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button Mode (Fast)"
            android:backgroundTint="#FDC007"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <Button
            android:id="@+id/btn_sensor_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Mode"
            android:backgroundTint="#FDC007"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />

        <Button
            android:id="@+id/btn_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard"
            android:backgroundTint="#FDC007"
            android:textColor="#000000"
            android:textSize="18sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />

    </LinearLayout>
</FrameLayout>
